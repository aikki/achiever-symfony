{% extends 'base.html.twig' %}

{% block title %}Stwórz cel{% endblock %}

{% block body %}
{% include 'club/components/_club_header.html.twig' %}
<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="mt-3">Stwórz cel</h2>
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Nazwa', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.name, { attr: { class: 'form-control' } }) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, 'Opis', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.description, { attr: { class: 'form-control' } }) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.iconClassName, 'Ikona', { label_attr: { class: 'form-label' } }) }}
                    <div class="form-control icon-choice">
                    {% for choice in form.iconClassName.children %}
                        {{ form_widget(choice) }}
                        {{ form_label(choice, null, { label_attr: { class: 'btn btn-lg btn-outline-secondary mb-1' } }) }}
                    {% endfor %}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Stwórz</button>
            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}